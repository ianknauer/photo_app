<section>
  <div class="row center">
    <h1><%= @customer.name %></h1>
     <%= link_to new_customer_album_path(@customer) do %>
        <button type="button" class="btn btn-primary edit"><span class="glyphicon glyphicon-folder-open"></span>  New Album</button>
     <% end %>
     <%= link_to edit_customer_path(@customer) do %>
        <button type="button" class="btn btn-default edit"><span class="glyphicon glyphicon-pencil"></span> Edit</button>
      <% end %>
    <div class="bottom row show">
      <span class="info-left">Email</span>
      <span class="info-right"><%= @customer.email %></span>
    </div>
    <div class="bottom row show">
      <span class="info-left">Phone</span>
      <span class="info-right"><%= @customer.phone %></span>
    </div>
  </div>
</section>
<section>
  <% @customer.albums.each do |album| %>
    <div class="album">
      <header>
        <h3>
          <%= link_to customer_album_path(@customer, album) do %>
            <%= album.name %>
          <% end %>
        </h3>
      </header>
      <div class="albums row">
        <% album.previews.each do |picture| %>
          <%= image_tag(picture.small_thumb.url) %>
        <% end %>
      </div>
    </div>
  <% end %>
<section>