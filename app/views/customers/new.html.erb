<div class="well">
  <%= form_for @customer do |c| %>
    <div class="control-group">
      <%= c.label :name %>
      <%= c.text_field :name %>
      <%= c.label :email %>
      <%= c.text_field :email %>
      <%= c.label :phone %>
      <%= c.text_field :phone %>
    </div>
    <%= c.submit 'Create a new User', class: 'btn btn-primary' %>

  <% end %>
</div>